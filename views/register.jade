.row
  .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    h1.text-center Create Profile
    hr.colorgraph
    form#register(action='#', method='post')
      fieldset
        .fields
          input#username(type='text', placeholder='Name', required, autofocus)
        .fields
          input#password(type='password', placeholder='Password', required)
        .fields
          input#_password(type='password', placeholder='Password', required)
        .fields
          .col-sm-6
            button.btn.btn-md.btn-primary.btn-block#register-login(type='button')
              i.fa.fa-times
              |  Login
          .col-sm-6
            button.btn.btn-md.btn-success.btn-block.confirm(type='submit')
              i.fa.fa-check
              |  Register
