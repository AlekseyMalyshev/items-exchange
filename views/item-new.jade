.row
  .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    h3.text-center New Item
    hr.colorgraph
    form#item-new(action='#', method='post')
      fieldset
        .fields
          input.ud#name(type='text', placeholder='Name', required, autofocus)
        .fields
          input.ud#description(type='text', placeholder='Description')
        .fields
          input.ud#location(type='text', placeholder='Location')
        .fields
          input.ud#picture(type='text', placeholder='Picture url')
        .fields.checkbox
          label
            input#forSale(type='checkbox')
            | &nbsp; this item is for sale
        .fields
          .col-sm-6
            button.btn.btn-md.btn-primary.btn-block#item-cancel(type='button')
              i.fa.fa-times
              |  Cancel
          .col-sm-6
            button.btn.btn-md.btn-success.btn-block.confirm(type='submit')
              i.fa.fa-check
              |  Save