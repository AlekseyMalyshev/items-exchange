.row
  .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    h3.text-center 
      span.review-text
               =item.name
    form#item-offer(action='#', method='post')
      fieldset
        .review
          if item.picture
              img#avatar(src=item.picture)
          p Description: 
            span.review-text
             =item.description
          p Location: 
            span.review-text
             =item.location
          p Comment: 
            span.review-text
             =item.comment
          p Seller: 
            span.review-text
              if item.owner.email
                a(href='mailto:' + item.owner.email)= item.owner.username
              else
                =item.owner.username
        .fields
          p You can offer one of following items in exchange:
          select.item
            each i in items
              option(value='id_' + i._id)=i.name
        .fields
          .col-sm-6
            button.btn.btn-md.btn-primary.btn-block#item-cancel(type='button')
              i.fa.fa-times
              |  Cancel
          .col-sm-6
            button.btn.btn-md.btn-success.btn-block.confirm(type='submit')
              i.fa.fa-check
              |  Offer
        input.hidden#for(type='text', value=item._id)
        input.hidden#to(type='text', value=item.owner._id)