extends ./layout

block css
  link(href='https://fonts.googleapis.com/css?family=Droid+Sans|Libre+Baskerville|Abril+Fatface', rel='stylesheet', type='text/css')
  link(href='css/style.css', rel='stylesheet')

block content
 html
  body
    .container
      h1 Profile
      hr
      .row
        // left column
        .col-md-3
          .text-center
            img.avatar.img-circle(src='/images/cute_monkey.png', alt='avatar')
            h6 Upload a different photo...
            input.form-control(type='file')
        // edit form column
        .col-md-9.personal-info
          h2 MESSAGE AREA
          .alert.alert-info.alert-dismissable
            a.panel-close.close(data-dismiss='alert') Ã—
            i.fa.fa-coffee
            strong  This is an alert
            | . Your friend Mrytle says, "Hello!"
          label Write Mrytle back!
            input
            input.btn.btn-default(type='reset', value='Send')
            img#friendImage(src="/images/mrytle.png")
            i.fa.fa-coffee
          h3 Personal info
         form.form-horizontal(role='form')
            .form-group
              label.col-lg-3.control-label First name:
              .col-lg-8
                input.form-control(type='text', value='Harry')
            .form-group
              label.col-lg-3.control-label Last name:
              .col-lg-8
                input.form-control(type='text', value='Larry')
            .form-group
              label.col-lg-3.control-label Company:
              .col-lg-8
                input.form-control(type='text', value='TrreLand')
            .form-group
              label.col-lg-3.control-label Email:
              .col-lg-8
                input.form-control(type='text', value='harrylarry@gmail.com')
            .form-group
              label.col-lg-3.control-label Hobbies:
              .col-lg-8
                input.form-control(type='text', value='tree climbing')
             .form-group
              label.col-md-3.control-label Username:
              .col-md-8
                input.form-control(type='text', value='username')
            .form-group
              label.col-md-3.control-label Password:
              .col-md-8
                input.form-control(type='password', value='11111122333')
            .form-group
              label.col-md-3.control-label Confirm password:
              .col-md-8
                input.form-control(type='password', placeholder='11111122333')
            .form-group
              label.col-md-3.control-label
              .col-md-8
                input.btn.btn-primary(type='button', value='Save Changes')
                span
                input.btn.btn-default(type='reset', value='Cancel')
block js
  script(src='js/main.js')



