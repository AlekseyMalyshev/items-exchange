.row
  .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    h1.text-center Edit Profile
    hr.colorgraph
    form#profile(action='#', method='post')
      fieldset
        if user.avatar
          .fields
            img#avatar(src=user.avatar)
        .fields
          input.ud#username(type='text', placeholder='Name', value=user.username, required, autofocus)
        .fields
          input.ud#password(type='password', placeholder='Password', required)
        .fields
          input#_password(type='password', placeholder='Password', required)
        .fields
          input.ud#email(type='text', placeholder='e-mail', value=user.email)
        .fields
          input.ud#address(type='text', placeholder='Address', value=user.address)
        .fields
          input.ud#zipcode(type='text', placeholder='zipcode', value=user.zipcode)
        .fields
          input.ud#phone(type='text', placeholder='Phone #', value=user.phone)
        .fields
          input.ud#city(type='text', placeholder='City', value=user.city)
        .fields
          input.ud#state(type='text', placeholder='State', value=user.state)
        .fields
          input.ud#avatar(type='text', placeholder='Avatar url', value=user.avatar)
        .fields
          .col-sm-6
            button.btn.btn-md.btn-primary.btn-block#profile-cancel(type='reset')
              i.fa.fa-times
              |  Back
          .col-sm-6
            button.btn.btn-md.btn-success.btn-block.confirm(type='submit')
              i.fa.fa-check
              |  Save
