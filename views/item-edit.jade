.row
  .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    h3.text-center Edit Item
    hr.colorgraph
    form.item-edit(id='id_' + item._id, action='#', method='post')
      fieldset
        if item.picture
          .fields
            img#avatar(src=item.picture)
        .fields
          input.ud#name(type='text', placeholder='Name', value=item.name, required, autofocus)
        .fields
          input.ud#description(type='text', placeholder='Description', value=item.location)
        .fields
          input.ud#location(type='text', placeholder='Location', value=item.location)
        .fields
          input.ud#picture(type='text', placeholder='Picture url', value=item.picture)
        .fields
          label
            if (item.forSale)
              input#forSale(type='checkbox', checked)
            else
              input#forSale(type='checkbox')
            | &nbsp; this item is for sale
        .fields
          .col-sm-6
            button.btn.btn-md.btn-primary.btn-block#item-cancel(type='button')
              i.fa.fa-times
              |  Cancel
          .col-sm-6
            button.btn.btn-md.btn-success.btn-block.confirm(type='submit')
              i.fa.fa-check
              |  Save